# 🔥 数据集配置
# 可选值: ielts_chillies, ielts_kaggle, asap
DATASET_NAME=asap

OPENROUTER_MODEL=meta-llama/llama-3.1-8b-instruct

# 指定 provider（可选，留空则使用默认路由）
# 例如: OpenAI, Anthropic, Together, Fireworks 等
OPENROUTER_PROVIDER=cerebras/fp16

# API 调用最小间隔（秒）
OPENROUTER_MIN_INTERVAL=0.2

# 🔥 API 超时和重试配置
# 单次请求超时时间（秒）- 如果 API 超过这个时间不响应，就放弃并重试
OPENROUTER_TIMEOUT=5.0

# 最大重试次数 - 超时或失败后重试的次数
OPENROUTER_MAX_RETRIES=3

# 重试退避基数 - 指数退避的基数（backoff = base^attempt）
OPENROUTER_RETRY_BACKOFF=2.0

USE_LLM_TEXT_MUTATION=1
LLM_TEXT_MUTATION_PROB=0.8
LLM_TEXT_MAX_TRIES=3
LLM_TEXT_MAX_CHARS=5000
USE_LLM_ICL_MUTATION=1
LLM_ICL_MUTATION_PROB=0.7
LLM_ICL_MAX_TRIES=3

# 🔥 ICL 模式切换
# 0 = 使用旧的策略模式（icl_strategy）
# 1 = 使用新的索引列表模式（icl_indices）
USE_ICL_INDICES_MODE=1

# 索引模式下的固定 k_shots 数量
ICL_K_SHOTS_FIXED=8

# 🔥 断点续传配置
# 1 = 启用断点续传，0 = 禁用
ENABLE_CHECKPOINT=1

# 每 N 代保存一次检查点（1 = 每代都保存）
CHECKPOINT_EVERY_GEN=1

# 🔥 遗传算法参数
# 种群大小 - 每代保留的个体数量
POP_SIZE=10

# 进化代数 - 总共进化多少代
N_GENERATIONS=50

# 锦标赛选择参数 - 每次从 K 个个体中选最优
TOURNAMENT_K=4

# 交叉率 - 个体交叉的概率（0.0-1.0）
CROSSOVER_RATE=0.85

# 变异率 - 基因变异的概率（0.0-1.0）
MUTATION_RATE=0.35

# 🔥 评估样本数配置
# 每个个体评估时使用的样本数量
# 推荐值：32（快速）、64（平衡）、128（精确）
N_EVAL_SAMPLES=32

# 🔥 分阶段评估（可选，高级功能）
# 启用后，前期用较少样本快速筛选，后期用较多样本精确评估
USE_STAGED_EVAL=0
N_EVAL_SAMPLES_EARLY=32
N_EVAL_SAMPLES_LATE=64
EARLY_PHASE_RATIO=0.67
